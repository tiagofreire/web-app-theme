<div class="block">
  <div class="content">
    <div class="inner">
      <% columns.each do |column| %>
        <p>
          <b><%= column.name %>:</b>
          <%%= @<%= resource_name %>.<%= column.name %> %>
        </p>
      <%- end -%>
      <%%= link_to 'Edit', edit_<%= singular_controller_routing_path %>_path(@<%= resource_name %>) %>
    </div>
  </div>
  <div class="bottom">&nbsp;</div>
</div>

<%% content_for :sidebar, render(:partial => 'sidebar') -%>